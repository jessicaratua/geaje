@model geaje.Models.bookModel

@{
    ViewBag.Title = "Details";
}

<style>
    .detail {
        position: absolute;
        left: 40%;
        top: 30%;
        border: 1px solid #DA1C5C;
        padding-left: 30px;
        padding-right: 30px;
        background-color: #DA1C5C;
        border-radius: 8px;
        margin-bottom: 50px;
    }

    dd {
        margin-bottom: 10px;
        color: white;
    }

    dt {
        color: #2BAEC0;
    }

    h2 {
        color: #2BAEC0;
    }
</style>
<div class="detail">
<h2>Detail Booking</h2>
   
    <hr />
    <dl class="">
        <dt>
            @Html.DisplayNameFor(model => model.venueModel.venue_name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.venueModel.venue_name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.customer_name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.customer_name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.tanggal_book)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tanggal_book)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.lama_book)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.lama_book)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.no_hp)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.no_hp)
        </dd>
        <dt>
            Total Harga
        </dt>

        <dd>
            @{int totalHarga = Model.venueModel.harga * Model.lama_book;}
            @Html.DisplayFor(x => totalHarga)
        </dd>

    </dl>
</div>
<p>
    
    @Html.ActionLink("Back", "Index",new { }, new { @class = "btn", @style = "background-color:#1f1e1e; color: #ffff;margin-top:30px;" })
</p>
